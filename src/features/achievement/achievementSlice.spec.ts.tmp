import achievementReducer, {
  AchievementState,
  increment,
  decrement,
  incrementByAmount,
} from './achievementSlice';

describe('counter reducer', () => {
  const initialState: AchievementState = {
    value: 3,
    status: 'idle',
  };
  it('should handle initial state', () => {
    expect(achievementReducer(undefined, { type: 'unknown' })).toEqual({
      value: 0,
      status: 'idle',
    });
  });

  it('should handle increment', () => {
    const actual = achievementReducer(initialState, increment());
    expect(actual.value).toEqual(4);
  });

  it('should handle decrement', () => {
    const actual = achievementReducer(initialState, decrement());
    expect(actual.value).toEqual(2);
  });

  it('should handle incrementByAmount', () => {
    const actual = achievementReducer(initialState, incrementByAmount(2));
    expect(actual.value).toEqual(5);
  });
});
